CPPFLAGS += -I ./include/

CFLAGS += -Wall -Wextra -Werror

OBJ := $(SRC:.c=.o)

TEST_OBJ := $(TEST_SRC:.c=.o)

NAME := libcubee.a

TEST_NAME := unit_tests

%.o:	%.c
	@$(ECHO) -e -n "\033[95m[ LIB ]\033[0m"
	@$(ECHO) "" $<
	@gcc $(CFLAGS) $(CPPFLAGS) -c -o $@ $<

